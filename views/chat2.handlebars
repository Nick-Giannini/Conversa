<main class="content">
    <div class="container p-0 ">

        <h1 id="conversaHeader" class="logo flex-center mb-3">Conversa chat</h1>

        <div class="card">
            <div class="row g-0">
                <div class="col-12 col-lg-5 col-xl-3 border-right">

                    {{!-- chat search functionality to be added later --}}
                    {{!-- <div class="px-4 d-none d-md-block">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                {{!-- user search --}}
                                <input type="text" class="form-control my-3" placeholder="Search">
                            </div>
                        </div>
                    </div> --}}



                    {{#each users as |user|}}

                    {{!-- chatroom anchor --}}
                    <a href="#" class="list-group-item list-group-item-action border-0">
                        <div class="d-flex align-items-start">

                            <!-- user name -->
                            <div class="flex-grow-1 ml-3">
                                Jennifer Chang

                            </div>
                        </div>
                    </a>

                    {{/each}}

                    <hr class="d-block d-lg-none mt-1 mb-0">
                </div>


                <!-- chat container -->
                <div class="col-12 col-lg-7 col-xl-9">
                    <div class="py-2 px-4 border-bottom d-none d-lg-block">

                        {{#each room as |room|}}
                        <!-- ACTIVE USER HEADER TO CHAT -->
                        <div id="activeChatHeader" class="d-flex align-items-center py-1">
                            <div class="flex-grow-1 pl-3">
                                <strong>{{room.name}}</strong>
                                {{!-- typing response --}}
                                <div class="text-muted small"><em>Typing...</em></div>
                            </div>
                            {{!-- logout button --}}
                            <div>
                                <button id="logoutBtn" class="btn btn-light border btn-sm px-3">Logout</button>
                            </div>
                        </div>

                    </div>

                    <div class="position-relative">
                        <div class="chat-messages p-4">

                            {{#each messRight as |message|}}

                            {{!-- message-right --}}
                            <div class="chat-message-right mb-4">
                                <div>

                                    {{!-- message timestamp --}}
                                    <div class="text-muted small text-nowrap mt-2">2:43 am</div>
                                </div>
                                <div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3">
                                    <div class="font-weight-bold mb-1">{{user.name}}</div>
                                    {{message.message_text}}
                                </div>
                            </div>
                            {{/each}}

                            {{#each messLeft as |message|}}
                            {{!-- message-left --}}
                            <div class="chat-message-left pb-4">
                                <div>

                                    {{!-- message timestamp --}}
                                    <div class="text-muted small text-nowrap mt-2">2:44 am</div>
                                </div>
                                <div class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3">
                                    <div class="font-weight-bold mb-1">Sharon Lessman</div>
                                    Sit meis deleniti eu, pri vidit meliore docendi ut, an eum erat animal commodo.
                                </div>
                            </div>

                            {{/each}}
                        </div>
                    </div>

                    {{!-- chat input and send button --}}
                    <div class="flex-grow-0 py-3 px-4 border-top">
                        <div class="input-group">
                            {{!-- text input --}}
                            <input id="chatText" type="text" class="form-control" placeholder="Type your message">
                            {{!-- send button --}}
                            <button id="sendBtn" class="btn btn-primary">Send</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>