<main class="content">
    <div class="container p-0 ">

        <h1 id="conversaHeader" class="logo flex-center mb-3">Conversa chat</h1>

        <div class="card">
            <div class="row g-0">
                <div id="active_users_list"  class="col-12 col-lg-5 col-xl-3 border-right">
                <span class="user_label">Users</span>
                    <a href="#" id="active_users_list" class="list-group-item list-group-item-action border-0">
                        <div class="d-flex align-items-start">

                            <!-- user name -->
                            <div class="flex-grow-1 ml-3"></div>
                        </div>
                    </a>

                    <hr class="d-block d-lg-none mt-1 mb-0">

                </div>


                <!-- chat container -->
                <div class="col-12 col-lg-7 col-xl-9">
                    <div class="py-2 px-4 border-bottom d-none d-lg-block">
                        <!-- ACTIVE USER HEADER TO CHAT -->
                        <div id="activeChatHeader" class="d-flex align-items-center py-1">
                            <div class="flex-grow-1 pl-3">
                                <strong></strong>
                                {{!-- typing response --}}
                                <div class="text-muted small"><em>Typing...</em></div>
                            </div>
                            {{!-- logout button --}}
                            <div>
                                <button id="logoutBtn" class="btn btn-light border btn-sm px-3">Logout</button>
                            </div>
                        </div>

                    </div>

                    <div class="position-relative">
                        <div id="chat" class="chat-messages p-4">

                        </div>
                    </div>

                    {{!-- chat input and send button --}}
                    <div class="flex-grow-0 py-3 px-4 border-top">
                        <div class="input-group">
                            {{!-- text input --}}
                            <input id="messageInput" type="text" class="form-control" placeholder="Type your message">
                            {{!-- send button --}}
                            <button id="send_message_btn" id="send" class="btn btn-primary">Send</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js"
        integrity="sha512-PU5S6BA03fRv1Q5fpwXjg5nlRrgdoguZ74urFInkbABMCENyx5oP3hrDzYMMPh3qdLdknIvrGj3yqZ4JuU7Nag=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/chat.js"></script>

</main>